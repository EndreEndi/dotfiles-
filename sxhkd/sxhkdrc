#
# HOT HOTKEYS
#

alt + Return
	alacritty

alt + p
	rofi -show run -display-run "başlat:"	

super + w
	rofi-pass --last-used

super + p
	arandr

alt + w
	thorium-browser 

alt + Escape
	bund -r

ctrl + alt + shift + t
	bund -o 

ctrl + alt + j
	bund -q

alt + v
	clipmenu


#
# BSPWM HOTKEYS
#

# quit/restart bspwm
super + alt + q
	bspc quit
# close or kill
alt + {_,shift + }q
	bspc node -{c,k} && [[ -z "$(bspc query --nodes --node any.local)" ]] && bspc desktop -f last.occupied

# set the window state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# MOUSE KEYS
#

super + m
	dunstify --urgency=LOW -i mouse --replace=643 "fare moduna girildi." "fare modundan çıkmak için [x] tuşuna bas" && keym && dunstify -i mouse --urgency=LOW --replace=643 "fare modundan çıkıldı."

super + h	
	dunstify --urgency=LOW -i mouse --replace=643 "sağ tık!" "" && xdotool key Menu

#
# FN KEYS
#

XF86ScreenSaver
	xset dpms force suspend && xsecurelock

XF86AudioLowerVolume
	notify-media volume down

XF86AudioRaiseVolume
	notify-media volume up

XF86AudioMute
	notify-media volume toggle

XF86AudioPlay
	playerctl play-pause

XF86AudioStop
	playerctl stop

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

alt + XF86AudioLowerVolume
	notify-media volume off

alt + XF86AudioRaiseVolume
	notify-media volume full

XF86MonBrightnessUp
	notify-media backlight up

XF86MonBrightnessDown
	notify-media backlight down

alt + XF86MonBrightnessUp
	notify-media backlight full

alt + XF86MonBrightnessDown
	notify-media backlight off

super + shift + s
	screenshot full

Print
	screenshot select

XF86Launch4
	bund -t

XF86Calculator
	rofi -show calc

#
# DUNST HOTKEYS
#

ctrl + space
	dunstctl close

ctrl + h
	dunstctl history-pop

ctrl + alt + h
	bund -d

